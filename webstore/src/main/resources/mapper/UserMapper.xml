<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wxl.webstore.user.mapper.UserMapper">
    <select id="selectByUsername" resultType="com.wxl.webstore.user.entity.User">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <select id="selectByPhone" resultType="com.wxl.webstore.user.entity.User">
        SELECT * FROM user WHERE phone = #{phone}
    </select>

    <select id="selectByEmail" resultType="com.wxl.webstore.user.entity.User">
        SELECT * FROM user WHERE email = #{email}
    </select>
    <select id="selectAllByRole" resultType="com.wxl.webstore.user.entity.User">
        SELECT * FROM user WHERE role = #{role}
    </select>
    <select id="selectSELLERByIsDeleted" resultType="com.wxl.webstore.user.entity.User">
        SELECT * FROM user WHERE is_deleted = #{is_deleted} AND role = 'SELLER'
    </select>
    <select id="selectCUSTOMERByIsDeleted" resultType="com.wxl.webstore.user.entity.User">
        SELECT * FROM user WHERE is_deleted = #{is_deleted} AND role = 'CUSTOMER'
    </select>
    <select id="selectByPhoneAndRole" resultType="com.wxl.webstore.user.entity.User">
        SELECT * FROM user WHERE phone = #{phone} AND role = #{role}
    </select>
    <select id="selectByEmailAndRole" resultType="com.wxl.webstore.user.entity.User">
        SELECT * FROM user WHERE email = #{email} AND role = #{role}
    </select>
    <select id="selectByUsernameAndRole" resultType="com.wxl.webstore.user.entity.User">
        SELECT * FROM user WHERE name = #{name} AND role = #{role}
    </select>


</mapper>
